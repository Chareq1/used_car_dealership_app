<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:users="clr-namespace:used_car_dealership_app.ViewModels.Users"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="used_car_dealership_app.Views.Users.UserUpdateView"
             x:DataType="users:UserUpdateViewModel"
             FontFamily="{StaticResource Ubuntu}">
    
        <Design.DataContext>
        <users:UserUpdateViewModel />
    </Design.DataContext>

    <Grid Margin="20,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="24" Text="Edytuj użytkownika" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" Margin="0,0,0,25"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Nazwa użytkownika:  " FontWeight="Bold" Margin="0,10,0,10" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Username, Mode=TwoWay}" IsReadOnly="True" MaxLength="255" Grid.Row="0" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyEmailKeyDown"/>

                <TextBlock Text="ID:  " FontWeight="Bold" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding User.UserId}" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                <TextBlock Text="Hasło:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Password, Mode=TwoWay}" PasswordChar="*" RevealPassword="False" MaxLength="255" Grid.Row="1" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyEmailKeyDown"/>

                <TextBlock Text="Typ użytkownika:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding UserTypes}" SelectedItem="{Binding User.Type}" Grid.Row="2" Grid.Column="1" Width="200" Margin="0,10,0,10"/>

                <TextBlock Text="Imię:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Name, Mode=TwoWay}" MaxLength="255" Grid.Row="3" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyLettersKeyDown"/>

                <TextBlock Text="Nazwisko:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Surname, Mode=TwoWay}" MaxLength="255" Grid.Row="4" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyLettersAndMinusKeyDown"/>

                <TextBlock Text="PESEL:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.PESEL, Mode=TwoWay}" MaxLength="255" Grid.Row="5" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyDigitsKeyDown"/>

                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Email, Mode=TwoWay}" MaxLength="255" Grid.Row="6" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyEmailKeyDown"/>

                <TextBlock Text="Nr telefonu:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Phone, Mode=TwoWay}" MaxLength="9" Grid.Row="7" Grid.Column="1" Width="200" Margin="0,10,0,10" KeyDown="OnlyDigitsKeyDown"/>

                <TextBlock Text="Kod pocztowy:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.ZipCode, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" MaxLength="6" Margin="0,10,0,10" KeyDown="OnlyDigitsAndMinusKeyDown"/>

                <TextBlock Text="Miejscowość:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.City, Mode=TwoWay}" Grid.Row="9" Grid.Column="1" MaxLength="255" Margin="0,10,0,10" KeyDown="OnlyLettersAndMinusAndSpaceKeyDown"/>

                <TextBlock Text="Ulica:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.Street, Mode=TwoWay}" Grid.Row="10" Grid.Column="1" MaxLength="255" Margin="0,10,0,10" KeyDown="OnlyLettersAndMinusAndSpaceKeyDown"/>

                <TextBlock Text="Nr domu:" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding User.HouseNumber, Mode=TwoWay}" Grid.Row="11" Grid.Column="1" MaxLength="10" Margin="0,10,0,10" KeyDown="OnlyHouseNumberKeyDown"/>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
            <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" CornerRadius="10" Width="50" Height="50" Command="{Binding GoBackCommand}">
                <PathIcon Data="{StaticResource ArrowReplyRegular}"/>
                
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#6BA3BE" />
                    </Style>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#0C969C" />
                    </Style>
                    <Style Selector="Button:pressed /template/ ContentPresenter">
                        <Setter Property="Background" Value="#0A7075" />
                    </Style>
                </Button.Styles>
            </Button>

            <Button Grid.Column="2" HorizontalAlignment="Right" Command="{Binding UpdateUserDataInDatabaseCommand}" VerticalAlignment="Bottom" CornerRadius="10" Width="50" Height="50">
                <PathIcon Data="{StaticResource EditSettingsRegular}"/>
                
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#6BA3BE" />
                    </Style>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#0C969C" />
                    </Style>
                    <Style Selector="Button:pressed /template/ ContentPresenter">
                        <Setter Property="Background" Value="#0A7075" />
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>
    </Grid>
</UserControl>
